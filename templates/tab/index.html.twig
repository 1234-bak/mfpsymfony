
    {% extends 'template.html.twig' %}
    
    {% block body %}
        <table class="table">
            {% for note in notes %}
                <tr>
                    <td>{{note}}</td>
                </tr>
            {% endfor %}
        </table>

        <div class="alert alert-info">
            <p>nombre de notes: {{notes | length}}</p>
            <p>note maximale: {{max(notes)}}</p>
            <p>note minimale: {{min(notes)}}</p>
            <p>moyenne des notes : {{moyenne}}</p>
        </div>
    {% endblock %}

    {% block pagetitle %}
        Tableau des notes
    {% endblock %}

    {% block title %}
        Tableau
    {% endblock %}
